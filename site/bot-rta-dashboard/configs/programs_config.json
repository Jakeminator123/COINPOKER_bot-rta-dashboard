  "virustotal": {
    "_description": "VirusTotal API integration for hash lookups. API key is read from config.txt (VirusTotalAPIKey) for security.",
    "enabled": true,
    "api_key_note": "API key stored in config.txt as VirusTotalAPIKey for security - not exposed in dashboard",
    "api_url": "https://www.virustotal.com/api/v3",
    "rate_limiting": {
      "_description": "Free tier: 4 requests/minute, 500/day. Premium has higher limits.",
      "requests_per_minute": 4,
      "min_interval_seconds": 20,
      "daily_limit": 500
    },
    "cache": {
      "_description": "Cache VT results to avoid repeated lookups",
      "enabled": true,
      "duration_hours": 24,
      "max_entries": 10000
    },
    "detection_thresholds": {
      "_description": "Number of AV engines flagging as malicious",
      "malware_critical": 5,
      "suspicious_warn": 2
    },
    "poker_keywords": {
      "_description": "Keywords in VT results that indicate poker-related malware",
      "terms": [
        "poker",
        "bot",
        "rta",
        "solver",
        "gto",
        "holdem",
        "cardbot",
        "pokerbot"
      ]
    },
    "auto_submit": {
      "_description": "Automatically submit unknown hashes to VT",
      "enabled": false,
      "min_suspicion_score": 50
    }
  },
  "hash_scanner": {
    "_description": "Settings for scanning process hashes",
    "interval_seconds": 15,
